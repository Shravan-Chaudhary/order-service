    "version": "1.0.0",
    "description": "Order management for epic-food ",
    "main": "src/server.ts",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/src/server.js",
        "build": "tsc",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
